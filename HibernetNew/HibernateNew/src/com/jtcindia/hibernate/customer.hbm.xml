<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      <hibernate-mapping package="com.jtcindia.hibernate">
      <class name="Customer" table="customer">
      <id name="cid" column="Cid" type="int">
      <generator class="increment"></generator>
        </id>
        <property name="cname" type="string" column="cname"></property>
         <property name="email" type="string" column="email"></property>
          <property name="phone" type="long" column="phone"></property>
           <property name="city" type="string" column="city"></property>
            <property name="bal" type="double" column="bal"></property>
      </class>
      </hibernate-mapping>