<!DOCTYPE hibernate-configuration PUBLIC
      "-//Hibernate/Hibernate configuration DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
      <hibernate-configuration>
      <session-factory>
      <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
      <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
      <property name="hibernate.connection.username">system</property>
      <property name="hibernate.connection.password">nishant</property>
      <property name="hibernate.connection.pool_size">99</property>
      <property name="dialect">org.hibernate.dialect.OracleDialect</property>
      <property name="hibernate.show_sql">true</property>
      <property name="hibernate.format_sql"></property>
      <property name="hbm2ddl.auto">update</property>
      <mapping class="com.jtc.hibernate.CustomerAnno"></mapping>
      </session-factory>
      </hibernate-configuration>
      